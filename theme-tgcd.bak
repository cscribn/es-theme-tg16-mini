<theme>
    <formatVersion>6</formatVersion>
	<view name="grid">
	
		<helpsystem name="help">
			<pos>2 2</pos>
		</helpsystem>		
	
		<image name="background" extra="true">
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./art/background.png</path>
			<color>ffffff</color>
		</image>
		
	</view>
	
	
	
	<view name="system">
	
		<image name="background" extra="true">
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./art/systems.png</path>
			<color>ffffff</color>
		</image>
		<image name="system-title" extra="true">
			<pos>.17 .045</pos>
			<size>.65 0</size>
			<path>./art/system-title.png</path>
			<color>ffffff</color>
			<origin>0 0</origin>
			<zIndex>110</zIndex>
		</image>
		<image name="help-image" extra="true">
			<pos>.17 .88</pos>
			<size>.65 0</size>
			<path>./art/help-system.png</path>
			<color>ffffff</color>
			<origin>0 0</origin>
			<zIndex>110</zIndex>
		</image>
		
		<image name="system-bar" extra="true">
			<pos>0.48 0.455</pos>
			<size>0 0.1037037037037037</size>
			<path>./art/system-bar.png</path>
			<color>ffffff</color>		
			<origin>0.5 0.5</origin>
			<zIndex>100</zIndex>
		</image>

		<text name="logoText">
			<fontPath>./art/Akzentica4FMedium.ttf</fontPath>
			<fontSize>0.055</fontSize>
			<color>000000</color>
			<forceUppercase>false</forceUppercase>
			<text>${system.fullName}</text>	
			
		</text>
		
		<text name="system-name" extra="true">
			<fontPath>./art/Akzentica4FMedium.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<color>000000</color>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.45</pos>
			<size>0.725 0.07</size>
			<alignment>center</alignment>
			<forceUppercase>false</forceUppercase>
			<text>${system.fullName}</text>		
			<zIndex>110</zIndex>
		</text>	
		
		<carousel name="systemcarousel">
			<type>vertical</type>
			<color>00000000</color>
			<logoScale>1.5</logoScale>
			<logoSize>0.3625 0.0555555555555556</logoSize>
			<size>1 0.8</size>
			<pos>0.5 0.45</pos>
			<origin>0.5 0.5</origin>
			<maxLogoCount>9</maxLogoCount>
		</carousel>	
	
		<text name="systemInfo">
			<fontPath>./art/Akzentica4FMedium.ttf</fontPath>
			<backgroundColor>00000000</backgroundColor>
			<fontSize>0.0592592592592593</fontSize>
			<size>1 0</size>
			<pos>2 2</pos>
			<color>00000000</color>
			<alignment>right</alignment>
			<origin>0.5 0.5</origin>
			<zIndex>110</zIndex>			
		</text>		
	</view>

	
	<view name="grid">
	
		
		<imagegrid name="gamegrid">
			<pos>0.00322222222 0.155555555555</pos>
			<size>0.9916666666666667 0.5777777777777778</size>
			<margin>0.0083333333333333 0.0222222</margin>
			<scrollDirection>horizontal</scrollDirection>
			<folderImage>./art/folder.png</folderImage>
		</imagegrid>

		<gridtile name="default">
			<size>0.1916666666666667 0.5777777777777778</size>
			<padding>0 0</padding>
			<backgroundImage>./art/tile.png</backgroundImage>
			<backgroundCornerSize>0 0</backgroundCornerSize>
			<backgroundColor>ffffff</backgroundColor>
			<imageColor>ffffff</imageColor>
		</gridtile>

		<gridtile name="selected">
			<size>0.1916666666666667 0.5777777777777778</size>
			<padding>0 0</padding>
			<backgroundCornerSize>0 0</backgroundCornerSize>
			<backgroundImage>./art/tile-selected.png</backgroundImage>
			<backgroundColor>ffffff</backgroundColor>
		</gridtile>
		
		<image name="title-bar" extra="true">
			<pos>0.5 0.66</pos>
			<size>1 .06</size>
			<path>./art/title-bar.png</path>
			<color>ffffff</color>	
			<origin>0.5 0.5</origin>
		</image>
		
		<text name="md_name">
			<pos>0.5 0.658</pos>
			<size>0.5416666666666667 0.0592592592592593</size>
			<origin>0.5 0.5</origin>
			<fontPath>./art/Akzentica4FMedium.ttf</fontPath>
			<fontSize>0.05</fontSize>
			<color>000000</color>
			<forceUppercase>false</forceUppercase>			
		</text>
		
		<image name="players-bar" extra="true">
			<pos>0.5 0.8</pos>
			<size>0.5 .15</size>
			<path>./art/players-bar.png</path>
			<color>ffffff</color>	
			<origin>0.5 0.5</origin>
		</image>
		<image name="controller" extra="true">
			<pos>0.67 0.817</pos>
			<size>0.08 .08</size>
			<path>./art/controller.png</path>
			<color>ffffff</color>	
			<origin>0.5 0.5</origin>
		</image>

		   <rating name="md_rating">
           			 <pos>0.35 0.8</pos>
           			 <size>0.12 0.12</size>
			<origin>0.5 0.5</origin>
            			<filledPath>./art/rating-full.png</filledPath>
            			<unfilledPath>./art/rating-empty.png</unfilledPath>
        		</rating>
		<text name="md_players">
			<pos>.935 0.79</pos>
			<size>0.5 0</size>
			<origin>0.5 0.5</origin>
			<fontPath>./art/roman.ttf</fontPath>
			<fontSize>0.06</fontSize>
			<color>c15d4d</color>
			<forceUppercase>false</forceUppercase>	
		</text>

		<image name="help-image" extra="true">
			<pos>0 1</pos>
			<size>1 0</size>
			<path>./art/help-gamelist.png</path>
			<color>ffffff</color>	
			<origin>0 1</origin>
			<zIndex>100</zIndex>			
		</image>		
		
	</view>

</theme>